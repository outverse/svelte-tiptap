{
  "name": "svelte-tiptap",
  "description": "Svelte components for tiptap v2",
  "version": "1.1.7",
  "author": "sibiraj-s",
  "license": "MIT",
  "repository": "https://github.com/sibiraj-s/svelte-tiptap.git",
  "bugs": "https://github.com/sibiraj-s/svelte-tiptap/issues",
  "homepage": "https://github.com/sibiraj-s/svelte-tiptap#readme",
  "keywords": [
    "svelte",
    "tiptap",
    "svelte-tiptap",
    "tiptap-v2",
    "prosemirror",
    "rich-text-editor"
  ],
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "vite dev --port 3009",
    "build:demo": "vite build",
    "build": "pnpm run build:demo && pnpm run package",
    "preview": "vite preview",
    "package": "svelte-kit sync && svelte-package && publint",
    "prepublishOnly": "is-ci || npm run build",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test": "vitest",
    "e2e": "cypress open --e2e",
    "lint": "eslint . --ext .js,.ts,.svelte --ignore-path .gitignore",
    "prepare": "pnpm run build",
    "publish:npm": "npm publish"
  },
  "peerDependencies": {
    "@tiptap/core": "^2.0.3",
    "@tiptap/extension-bubble-menu": "^2.0.3",
    "@tiptap/extension-floating-menu": "^2.0.3",
    "@tiptap/pm": "^2.0.3",
    "svelte": "^4.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.8.1",
    "@sveltejs/adapter-static": "^2.0.3",
    "@sveltejs/kit": "^1.30.4",
    "@sveltejs/package": "^2.3.10",
    "@testing-library/svelte": "^4.2.3",
    "@tiptap/core": "^2.27.2",
    "@tiptap/extension-bubble-menu": "^2.27.2",
    "@tiptap/extension-floating-menu": "^2.27.2",
    "@tiptap/pm": "^2.27.2",
    "@tiptap/starter-kit": "^2.27.2",
    "@types/node": "^18.19.86",
    "autoprefixer": "^10.4.21",
    "clsx": "^2.1.1",
    "commitlint-config-non-conventional": "^1.0.1",
    "cypress": "^13.17.0",
    "eslint": "^8.57.1",
    "eslint-config-pegasus": "^5.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-cypress": "^2.15.2",
    "eslint-plugin-svelte": "^2.46.1",
    "happy-dom": "^20.0.2",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "lint-staged": "^14.0.1",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "prettier-plugin-svelte": "^3.3.3",
    "publint": "^0.2.12",
    "sass": "^1.86.1",
    "svelte": "^4.2.19",
    "svelte-check": "^3.8.6",
    "tailwindcss": "^3.4.17",
    "tslib": "^2.8.1",
    "typescript": "^5.8.2",
    "typescript-transform-extensions": "^1.0.1",
    "vite": "^4.5.11",
    "vitest": "^0.34.6"
  }
}
